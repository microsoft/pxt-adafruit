{
    "id": "adafruit",
    "nickname": "circuitplayground",
    "name": "Adafruit Circuit Playground Express",
    "title": "Adafruit Circuit Playground Express - Blocks / Javascript editor",
    "description": "A Blocks / JavaScript code editor for the Adafruit Circuit Playground Express.",
    "corepkg": "core",
    "bundleddirs": [
        "node_modules/pxt-common-packages/libs/core"
    ],
    "serial": {
        "useHF2": true,
        "log": true
    },
    "simulator": {
        "autoRun": true,
        "streams": true,
        "aspectRatio": 1.0,
        "parts": false,
        "boardDefinition": {
            "visual": "circuitplayground",
            "gpioPinBlocks": [
                [
                    "P0"
                ],
                [
                    "P1"
                ],
                [
                    "P2"
                ],
                [
                    "P3"
                ],
                [
                    "P4",
                    "P5",
                    "P6",
                    "P7"
                ],
                [
                    "P8",
                    "P9",
                    "P10",
                    "P11",
                    "P12"
                ],
                [
                    "P16"
                ]
            ],
            "gpioPinMap": {
                "P0": "P0",
                "P1": "P1",
                "P2": "P2",
                "P3": "P3",
                "P4": "P4",
                "P5": "P5",
                "P6": "P6",
                "P7": "P7",
                "P8": "P8",
                "P9": "P9",
                "P10": "P10",
                "P11": "P11",
                "P12": "P12",
                "P13": "P13",
                "P14": "P14",
                "P15": "P15",
                "P16": "P16",
                "P19": "P19",
                "P20": "P20"
            },
            "i2cPins": {
                "SDA": "P2",
                "SCL": "P3"
            },
            "analogInPins": [
                "A0",
                "A4",
                "A5"
            ],
            "groundPins": [
                "GND_0",
                "GND_1",
                "GND_2"
            ],
            "threeVoltPins": [
                "PWR_0",
                "PWR_2"
            ],
            "attachPowerOnRight": true,
            "onboardComponents": [
                "accelerometer",
                "buttonpair",
                "speaker",
                "thermometer",
                "rgbsensor",
                "lightsensor",
                "microphone"
            ],
            "useCrocClips": true,
            "marginWhenBreadboarding": [
                0,
                0,
                80,
                0
            ]
        }
    },
    "cloud": {
        "workspace": false,
        "packages": true,
        "sharing": true,
        "publishing": true,
        "preferredPackages": [],
        "githubPackages": true
    },
    "compile": {
        "isNative": true,
        "useUF2": true,
        "hasHex": true,
        "deployDrives": ".*",
        "deployFileMarker": "INFO_UF2.TXT",
        "driveName": "CPLAYBOOT",
        "openocdScript": "source [find interface/cmsis-dap.cfg]; set CHIPNAME at91samd21g18; source [find target/at91samdXX.cfg]",
        "flashChecksumAddr": 8368,
        "flashCodeAlign": 256
    },
    "runtime": {
        "mathBlocks": true,
        "loopsBlocks": true,
        "logicBlocks": true,
        "variablesBlocks": true,
        "textBlocks": true,
        "onStartNamespace": "control",
        "onStartColor": "#BEAA07"

    },
    "compileService": {
        "yottaTarget": "adafruit-cp-g18a",
        "yottaBinary": "pxt-samd.hex",
        "yottaCorePackage": "codal",
        "yottaConfig": {
            "pxt": {
                "board": {
                    "id": "BOARD_ID_CPLAY"
                }
            }
        },        
        "githubCorePackage": "lancaster-university/codal",
        "gittag": "master",
        "serviceId": "codalcp"
    },
    "appTheme": {
        "accentColor": "#0089BF",
        "logoUrl": "https://adafruit.com/circuitplaygroundpxt",
        "logo": "./static/logo.svg",
        "docsLogo": "./static/logo.square.svg",
        "portraitLogo": "./static/logo.square.svg",
        "footerLogo": "./static/logo.square.svg",
        "cardLogo": "./static/icons/android-chrome-192x192.png",
        "appLogo": "./static/icons/android-chrome-192x192.png",
        "organization": "Microsoft",
        "organizationUrl": "https://pxt.io/",
        "organizationLogo": "./static/Microsoft-logo_rgb_c-gray-square.png",
        "organizationWideLogo": "./static/Microsoft-logo_rgb_c-white.png",
        "homeUrl": "https://adafruit.pxt.io",
        "embedUrl": "https://adafruit.pxt.io/",
        "privacyUrl": "https://go.microsoft.com/fwlink/?LinkId=521839",
        "termsOfUseUrl": "https://go.microsoft.com/fwlink/?LinkID=206977",
        "githubUrl": "https://github.com/Microsoft/pxt-adafruit",
        "boardName": "Adafruit Circuit Playground Express",
        "docMenu": [
            {
                "name": "About",
                "path": "/about"
            },
            {
                "name": "Blocks",
                "path": "/blocks"
            },
            {
                "name": "JavaScript",
                "path": "/javascript"
            },
            {
                "name": "Reference",
                "path": "/reference"
            }
        ],
        "sideDoc": "tutorials/getting-started",
        "invertedMenu": true,
        "invertedToolbox": true,
        "invertedMonaco": true,
        "monacoToolbox": true,
        "simAnimationEnter": "roll in",
        "simAnimationExit": "roll out",
        "exampleGallery": "examples",
        "hasAudio": true,
        "blocklyOptions": {
            "grid": {
                "spacing": 45,
                "length": 2,
                "colour": "#FB48C7",
                "snap": true
            }
        },
        "usbHelp": []
    }
}
